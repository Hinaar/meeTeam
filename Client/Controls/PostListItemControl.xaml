<UserControl x:Class="Client.PostListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">

    <Border d:DataContext="{x:Static local:PostListItemDesignModel.Instance}">
        <Grid>
            <Border CornerRadius="10" Background="Aqua" Margin="2">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding Name}"  FontWeight="Bold" Padding="5,0,0,0 "/>
                    <TextBlock Text="{Binding Message}" 
                           TextWrapping="Wrap" Padding="5, 0, 5, 5"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
