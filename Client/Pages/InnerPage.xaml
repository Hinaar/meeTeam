<local:BasePage x:TypeArguments="local:InnerViewModel"  x:Class="Client.InnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="InnerPage">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill"  ImageSource="/Images/Backgrounds/4.jpg" />
        </Grid.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Border Margin="15" CornerRadius="10" Background="{StaticResource ForegroundLightBrush}">
                <Grid>
                    <Grid.OpacityMask>
                        <VisualBrush Visual="{Binding ElementName=MyRoundedBorder}"/>
                    </Grid.OpacityMask>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="MyRoundedBorder" CornerRadius="10" Background="{StaticResource ForegroundLightBrush}" />
                    <StackPanel Grid.Column="0" TextBlock.TextAlignment="Center" Orientation="Vertical">
                        <TextBlock Text="My Events" FontWeight="Bold" Background="AliceBlue" Padding="5"/>
                        <ListView Name="lvEventList" ItemsSource="{Binding Path=EventList}" SelectedItem="{Binding SelectedEvent, Mode=TwoWay}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <local:EventView/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <Label Content="Title:" />
                        <TextBox Text="{Binding SelectedEvent.Title, Mode=TwoWay}" />
                        <Label Content="From:" />
                        <TextBox Text="{Binding SelectedEvent.FromDate, Mode=TwoWay,StringFormat='yyyy.MM.dd HH:mm:ss '}" />
                        <DatePicker SelectedDate="{Binding SelectedEvent.FromDate}"/>
                        <Label Content="To:" />
                        <TextBox Text="{Binding SelectedEvent.ToDate, Mode=TwoWay, StringFormat='yyyy.MM.dd HH:mm:ss '}" />
                        <Label Content="Description:" />
                        <TextBox Text="{Binding SelectedEvent.Description, Mode=TwoWay}" />
                        <Label Content="Posts:" />
                        <TextBox Text=".include(e=>e.Posts)" />
                        <Button Command="{Binding NewEventCommand}" Padding="10 10" Margin="0 20" Content="New" HorizontalAlignment="Center"/>

                    </StackPanel>
                </Grid>
            </Border>    
        </ScrollViewer>
    </Grid>
</local:BasePage>
