<local:BasePage x:TypeArguments="local:LoginViewModel" x:Class="Client.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="LoginPage">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill"  ImageSource="/Images/Backgrounds/4.jpg" />
        </Grid.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.TextAlignment="Center">
                <Border Background="{StaticResource ForegroundLightBrush}" 
                    CornerRadius="10" 
                    Padding="10 50 10 10" 
                    Width="398.915" 
                    Margin="50 50 50 0" Height="258.107" >
                    <StackPanel>


                        <TextBlock Text="Sign In" FontSize="25" FontWeight="Bold" Foreground="{StaticResource ForegroundPurpleBrush}" >
                            <TextBlock.Effect>
                                <DropShadowEffect
                                ShadowDepth="0"
                                Color="Black"
                                Opacity="1"
                                BlurRadius="1" Direction="0">
                                </DropShadowEffect>
                            </TextBlock.Effect>
                        </TextBlock>

                        <TextBox Text="{Binding Email}" Margin="0 10 0 0" Padding="2" HorizontalAlignment="Stretch"/>
                        <PasswordBox Name="pwdBox" Margin="0 10 0 0" Padding="2"/>
                        <Button Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=pwdBox}" Content="Next" HorizontalAlignment="Center" Margin="0,15,0,0" Padding="3,0,0,0" Style="{DynamicResource NextButtonStyle}" Height="39.03" Width="64.535" VerticalAlignment="Center">

                        </Button>
                    </StackPanel>
                </Border>

                <Button Content="Register" HorizontalAlignment="Center" Margin="0 10 0 10" Style="{DynamicResource RegisterButton}" Width="164"/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</local:BasePage>
